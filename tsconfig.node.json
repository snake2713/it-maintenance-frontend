{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "paths": {
      "src/*": ["./*"],
      "components/*": ["components/*"],
      "pages/*": ["pages/*"],
      "assets/*": ["assets/*"],
      "modules/*": ["modules/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["vite.config.ts"]
}
